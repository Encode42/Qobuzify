{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES2017",
        "module": "ES2020",
        "lib": [
            "ES2020",
            "dom"
        ],
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "incremental": true,
        "strict": true,
        "allowJs": true,
        "declaration": true,
        "skipLibCheck": true,
        "listFiles": true,
        "types": ["node"],
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "public/docs",
        "githubPages": true,
        "validation": {
            "invalidLink": true
        },
        "readme": "none",
        "name": "Packed",
        "includeVersion": true,
        "sort": ["static-first", "visibility"]
    },
    "files": ["./.eslintrc.cjs"],
    "include": [
        "src"
    ]
}
